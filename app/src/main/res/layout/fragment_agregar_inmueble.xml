<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="12dp"
    tools:context=".ui.inmuebles.agregar.AgregarInmuebleFragment">

    <!-- === CAMPOS DE FORMULARIO MÁS COMPACTOS === -->

    <TextView
        android:id="@+id/tvAmbientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ambientes"
        android:textColor="#555"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etAmbientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:hint="Ej: 3"
        android:inputType="number"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvAmbientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSuperficie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Superficie (m²)"
        android:textColor="#555"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etAmbientes"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etSuperficie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="6dp"
        android:inputType="numberDecimal"
        android:hint="Ej: 120.5"
        app:layout_constraintTop_toBottomOf="@id/tvSuperficie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dirección"
        android:textColor="#555"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etSuperficie"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="6dp"
        android:hint="Ej: Calle 123, Ciudad"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvDireccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvUso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Uso"
        android:textColor="#555"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etDireccion"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etUso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="6dp"
        android:hint="Ej: Vivienda / Comercial"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvUso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tipo"
        android:textColor="#555"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etUso"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etTipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="6dp"
        android:hint="Ej: Casa, Departamento, Lote..."
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvTipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Latitud y Longitud -->
    <TextView
        android:id="@+id/tvLatitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Latitud"
        android:textColor="#555"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etTipo"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etLatitud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_edittext"
        android:padding="6dp"
        android:inputType="numberDecimal"
        android:hint="@string/_34_1234"
        app:layout_constraintTop_toBottomOf="@id/tvLatitud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etLongitud" />

    <TextView
        android:id="@+id/tvLongitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitud"
        android:textColor="#555"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etTipo"
        app:layout_constraintStart_toEndOf="@id/tvLatitud" />

    <EditText
        android:id="@+id/etLongitud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="6dp"
        android:inputType="numberDecimal"
        android:hint="-58.1234"
        app:layout_constraintTop_toBottomOf="@id/tvLongitud"
        app:layout_constraintStart_toEndOf="@id/etLatitud"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Valor -->
    <TextView
        android:id="@+id/tvValor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Valor (AR$)"
        android:textColor="#555"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etLatitud"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etValor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:padding="6dp"
        android:inputType="numberDecimal"
        android:hint="Ej: 250000.00"
        app:layout_constraintTop_toBottomOf="@id/tvValor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ImageView optimizado -->
    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="375dp"
        android:layout_height="181dp"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0"
        android:contentDescription="@string/imagen_del_inmueble"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etValor" />

    <!-- Botones -->
    <Button
        android:id="@+id/btnCargarImg"
        android:layout_width="383dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_boton"
        android:text="Seleccionar imagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPreview" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="379dp"
        android:layout_height="49dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_boton"
        android:padding="10dp"
        android:text="Guardar Inmueble"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCargarImg"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
